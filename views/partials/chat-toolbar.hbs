<div class="row">
    <div class= "col-md-12 col-lg-12">
        <div class="card scroll" id="chatCard">
            <div class="card-body">
                <ul class="list-group list-group-flush" id="chatLog">

                </ul>
            </div>
        </div>
    </div>
</div>
